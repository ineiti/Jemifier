{
  "packages": [
    "bun@latest",
    "nodejs@20",
    "git@latest",
    "vim@latest",
    "less@latest",
    "openssh@latest",
    "hexdump@latest",
    "curl@latest",
    "jq@latest",
    "screen@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null",
      "alias ls='ls --color'"
    ],
    "scripts": {
      "start": [
        "bun start"
      ],
      "build": [
        "bun run build"
      ]
    }
  },
  "env": {
    "BUN_INSTALL": "$PWD/.bun",
    "LS_COLORS":   "di=33",
    "PATH":        "$PATH:$PWD/.bun/bin"
  }
}
